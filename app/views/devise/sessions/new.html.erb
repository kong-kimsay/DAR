<!-- BEGIN LOGIN FORM -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h3 class="form-title">Login to your account </h3>
        <div class="alert alert-danger display-hide">
          <button class="close" data-close="alert"></button>
			<span>
			Enter any username and password. </span>
        </div>
        <div class="form-group">
          <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
          <label class="control-label visible-ie8 visible-ie9">Username</label>
          <div class="input-icon">
            <i class="fa fa-user"></i>
            <%= f.text_field :login, autofocus: true , autocomplete: "off", placeholder: "Username", class: "form-control placeholder-no-fix"%>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">Password</label>
          <div class="input-icon">
            <i class="fa fa-lock"></i>
            <%= f.password_field :password, autocomplete: "off",  placeholder: "Password", class: "form-control placeholder-no-fix"%>
          </div>
        </div>
        <div class="form-actions">
          <%# if devise_mapping.rememberable? -%>
          <%# f.check_box :remember_me%>
          <%# f.label :remember_me, class: "check" %>
          <%# end -%>
          <%= f.submit "Log in", class: "btn green-haze pull-right" %>
          <i class="m-icon-swapright m-icon-white"></i>
        </div>
        <div class="forget-password">
          <h4>Forgot your password ?</h4>
          <p>
            no worries, click <%= link_to "here", new_password_path(resource_name) %>
            to reset your password.
          </p>
        </div>
    <% end %>
<!-- END LOGIN FORM -->


