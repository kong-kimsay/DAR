<div class="col-md-12 col-sm-12">
  <div class="portlet blue-hoki box">
    <div class="portlet-title">
      <div class="caption">
        <i class="fa fa-flag"></i> <%= @hr_config_country.khtitle %> | <%= @hr_config_country.title %>
      </div>
      <div class="actions">
        <%= link_to raw("<i class='fa fa-angle-left'></i>  ត្រលប់ក្រោយ"), hr_config_countries_path, :class => "btn btn-circle btn-default" %>
        <%= link_to raw("<i class='fa fa-pencil'></i> កែប្រែ"), edit_hr_config_country_path(@hr_config_country),
        :class => "btn btn-circle btn-default" %>
        <%# link_to raw("<i class='fa fa-trash-o'></i> លុប"), @hr_config_country,
        :class => "btn btn-circle btn-default" %>
      </div>
    </div>
    <div class="portlet-body">
      <div class="row static-info">
        <div class="col-md-5 name">
          កូដសំគាល់ | Code:
        </div>
        <div class="col-md-7 value">
          <%= @hr_config_country.code %>
        </div>
      </div>
      <div class="row static-info">
        <div class="col-md-5 name">
          ឈ្មេាះ | Title
        </div>
        <div class="col-md-7 value">
          <%= @hr_config_country.title %>
        </div>
      </div>
      <div class="row static-info">
        <div class="col-md-5 name">
          ឈ្មេាះជាភាសាខ្មែរ | Khmer Title
        </div>
          <div class="col-md-7 value">
            <%= @hr_config_country.khtitle %>
          </div>
        
      </div>
      <div class="row static-info">
        <div class="col-md-5 name">
          ពិពណ៌នា | Description
        </div>
        <div class="col-md-7 value">
          <%= @hr_config_country.description %>
        </div>
      </div>
      <div class="row static-info">
        <div class="col-md-5 name">
          ពិពណ៌នាជាភាសាខ្មែរ | Khmer Description
        </div>
        <div class="col-md-7 value">
          <%= @hr_config_country.khdescription %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>